<Page
    Height="900"
    
    x:Class="Aez.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aez"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="590">

    <NavigationView x:ConnectionId='2' x:Name="nvSample" 
                    PaneDisplayMode="Top" 
                    Height="900" Width="600" 
                                             
                                                                 
                                                      >
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Recognition" Tag="Recog_page" />
            <NavigationViewItem x:ConnectionId='3' Tag="SamplePage2" x:Name="SamplePage2">
                <TextBlock Tag="SP2">SP2</TextBlock>
            </NavigationViewItem>
            <NavigationViewItem Content="Music" Tag="SamplePage3" />
            <NavigationViewItem Content="ConnectPeople" Tag="SamplePage4" />
        </NavigationView.MenuItems>
        <Frame x:ConnectionId='4' x:Name="contentFrame">

            <Grid Margin="-10,0,10,1" Height="1001" Width="600" VerticalAlignment="Bottom">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/XiaoBing_FifthGen.jpeg" Stretch="Uniform">
                    </ImageBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="猫狗认知训练游戏" Grid.Row="2" FontSize="24" FontWeight="Bold" Foreground="CadetBlue" HorizontalAlignment="Center"/>
                <TextBlock x:ConnectionId='5' Text="今天也是个好日子呢" Grid.Row="2" FontSize="24" FontWeight="Black" Foreground="AntiqueWhite" HorizontalAlignment="Center" VerticalAlignment="Bottom" x:Name="OutPutText"/>
                <Image x:ConnectionId='6' Source="Assets/cat1.jpg" Grid.Row="1" x:Name="AniType"/>


                <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                    <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                    <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                    <AppBarButton x:ConnectionId='7' x:Name="Btn_Send"                        FontSize="7" Background="{x:Null}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE720;" FontFamily="Segoe MDL2 Assets"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <TextBox x:ConnectionId='8'  Margin="10,10" Height="40" Width="400"  x:Name="Tb_Answer"  VerticalAlignment="Top" RenderTransformOrigin="0.592,0.575" />
                    <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                    <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                </StackPanel>
            </Grid>
        </Frame>
    </NavigationView>
    
</Page>

