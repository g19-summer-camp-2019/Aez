<Page
    Height="900"
    
    x:Class="Aez.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aez"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="590">

    <NavigationView x:ConnectionId='2' x:Name="nvSample" PaneDisplayMode="Top" Height="900" Width="600">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="NumberGames" Tag="SamplePage1" />
            <NavigationViewItem Content="Recognition" Tag="SamplePage2" />
            <NavigationViewItem Content="Music" Tag="SamplePage3" />
            <NavigationViewItem Content="ConnectPeople" Tag="SamplePage4" />
        </NavigationView.MenuItems>



        <Grid Margin="-10,0,10,1" Height="1001" Width="600" VerticalAlignment="Bottom">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/XiaoBing_FifthGen.jpeg" Stretch="Uniform">
                </ImageBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                <AppBarButton x:ConnectionId='3' x:Name="Btn_Send"                        FontSize="7" Background="{x:Null}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE720;" FontFamily="Segoe MDL2 Assets"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <TextBox x:ConnectionId='4' Margin="10,10" Height="40" Width="400"  x:Name="Tb_Answer"  VerticalAlignment="Top" RenderTransformOrigin="0.592,0.575" />
                <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
                <!--<TextBlock Text="跟小D说说话吧" SelectionChanged="TextBlock_SelectionChanged"/>-->
            </StackPanel>
        </Grid>
    </NavigationView>
</Page>

